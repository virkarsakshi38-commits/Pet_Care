    </a>

</div>
 <style>
        body {
            font-family: Arial;
            background:#f5f6fa;
            padding:20px;
        }

        h2 {
            margin-bottom:20px;
        }

        table {
            width:100%;
            border-collapse:collapse;
            background:#fff;
        }

        th, td {
            padding:12px;
            border:1px solid #ddd;
            text-align:left;
        }

        th {
            background:#1e272e;
            color:#fff;
        }

        img {
            width:60px;
            height:60px;
            object-fit:cover;
            border-radius:5px;
        }

        .status {
            padding:5px 10px;
            border-radius:4px;
            color:#fff;
            font-size:13px;
        }

        .Pending { background:#f4b400; }
        .Approved { background:#28a745; }
        .Rejected { background:#dc3545; }
    </style>

Main Content
<div class="main-content">
   
    <div class="row g-4">
   
<body>

<h2>Pet Booking List</h2>

<table>
    <thead>
        <tr>
            <th>#</th>
            <th>Pet</th>
            <th>Pet Name</th>
            <th>User Name</th>
            <th>Mobile</th>
            <th>Date</th>
            <th>Status</th>
        </tr>
    </thead>

    <tbody>
        <% booking.forEach((b, index) => { %>
        <tr>
            <td><%= index + 1 %></td>

            <td>
                <% if(b.dog_image){ %>
                    <img src="<%= b.dog_image %>">
                <% } %>
            </td>

            <td><%= b.pet_name %></td>
            <td><%= b.user_name %></td>
            <td><%= b.user_mobile %></td>
            <td><%= b.created_at.toISOString().slice(0,10) %></td>

            <td>
                <span class="status <%= b.booking_status %>">
                    <%= b.booking_status %>
                </span>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>

</body>
</html>


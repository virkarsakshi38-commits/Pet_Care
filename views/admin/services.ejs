    <style>
        * {
            font-family: Arial, sans-serif;
            box-sizing: border-box;
        }

        body {
            background: #f5f6fa;
            margin: 0;
            padding: 20px;
        }

        .container {
            max-width: 1100px;
            margin: auto;
        }

        h1 {
            margin-bottom: 20px;
        }

        .card {
            background: #fff;
            border-radius: 6px;
            padding: 20px;
            margin-bottom: 25px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }

        .form-row {
            display: flex;
            gap: 15px;
            align-items: flex-end;
        }

        .form-group {
            flex: 1;
        }

        label {
            display: block;
            margin-bottom: 6px;
            font-weight: 600;
        }

        input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        thead {
            background: #1e272e;
            color: #fff;
        }

        th, td {
            padding: 12px;
            text-align: left;
        }

        tbody tr {
            border-bottom: 1px solid #ddd;
        }

        .btn {
            padding: 8px 14px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            color: #fff;
            font-size: 14px;
        }

        .primary {
            background: #0d6efd;
        }

        .warning {
            background: #f4b400;
        }

        .danger {
            background: #dc3545;
        }

        .badge {
            padding: 5px 10px;
            border-radius: 12px;
            font-size: 12px;
            color: #fff;
        }

        .active {
            background: #28a745;
        }

        @media (max-width: 768px) {
            .form-row {
                flex-direction: column;
            }
        }
    </style>

Main Content
<div class="main-content">
   
    <div class="row g-4">
<body>

<div class="container">
    <h1>Services</h1>

   
    <div class="card">
    <h2>Add New Service</h2>

    <form method="post" action="/admin/save-service">
        <div class="form-row">
            <div class="form-group">
                <label>Service Name</label>
                <input type="text" name="service_name" required>
            </div>

            <div class="form-group">
                <label>Price</label>
                <input type="number" name="price" required>
            </div>

            <button type="submit" class="btn primary">
                Save Service
            </button>
        </div>
    </form>
</div>

    
    <div class="card">
        <h2>Services List</h2>
        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Service Name</th>
                    <th>Price</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
    <% if (services.length > 0) { %>
        <% services.forEach(function(service, index){ %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= service.service_name %></td>
                <td>â‚¹ <%= service.price %></td>
                <td>
                    <span class="badge active">Active</span>
                </td>
                <td>
    <!-- EDIT -->
    <a href="/admin/edit-service/<%= service.id %>" class="btn warning">
        <i class="fa-solid fa-pen"></i> Edit
    </a>

    <!-- DELETE -->
    <form action="/admin/delete-service/<%= service.id %>" method="POST" style="display:inline;"
          onsubmit="return confirm('Are you sure you want to delete this service?');">
        <button type="submit" class="btn danger">
            <i class="fa-solid fa-trash"></i> Delete
        </button>
    </form>
</td>
            </tr>
        <% }) %>
    <% } else { %>
        <tr>
            <td colspan="5" style="text-align:center;">
                No services found
            </td>
        </tr>
    <% } %>
</tbody>

        </table>
    </div>
</div>

</body>
</html>






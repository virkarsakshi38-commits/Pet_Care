<body>

<div class="container">
    <h1>Blogs</h1>

   
    <div class="card">
    <div class="card-title">Add New Blog</div>

    <!-- ✅ FORM START -->
    <form method="post" action="/admin/save-blog">

        <div class="row">
            <div class="col">
                <label>Blog Title</label>
                <input type="text" name="title" placeholder="Enter blog title" required>
            </div>
            <div class="col">
                <label>Slug</label>
                <input type="text" name="slug" placeholder="Enter slug">
            </div>
        </div>

        <div class="row">
            <div class="col">
                <label>Image URL</label>
                <input type="text" name="image">
            </div>
        </div>

        <div class="row">
            <div class="col">
                <label>Description</label>
                <textarea name="description"></textarea>
            </div>
        </div>

        <button type="submit" class="btn primary">Save Blog</button>

    </form>
    <!-- ✅ FORM END -->
</div>


        


    <!-- list of blogs  -->
     
    <div class="card">
        <div class="card-title">Blogs List</div>

        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Slug</th>
                    <th>Image</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
<% if(blogs.length > 0){ %>
    <% blogs.forEach((b, index) => { %>
        <tr>
            <td><%= index + 1 %></td>
            <td><%= b.title %></td>
            <td><%= b.slug %></td>
            <td>
                <% if(b.image){ %>
                    <img src="<%= b.image %>">
                <% } else { %>
                    No Image
                <% } %>
            </td>
            <td>
                <button class="btn warning">Edit</button>
                <button class="btn danger">Delete</button>
            </td>
        </tr>
    <% }) %>
<% } else { %>
    <tr>
        <td colspan="5" style="text-align:center;">
            No blogs found
        </td>
    </tr>
<% } %>
</tbody>

        </table>
    </div>
</div>


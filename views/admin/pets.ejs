 <style>
        * { font-family: Arial, sans-serif; box-sizing: border-box; }
        body { background:#f5f6fa; margin:0; padding:20px; }
        .container { max-width:1200px; margin:auto; }
        h1 { margin-bottom:20px; }

        .card {
            background:#fff;
            border-radius:6px;
            padding:20px;
            margin-bottom:25px;
            box-shadow:0 2px 8px rgba(0,0,0,0.08);
        }

        .card-title { font-size:18px; font-weight:600; margin-bottom:15px; }

        .row { display:flex; gap:15px; margin-bottom:15px; }
        .col { flex:1; }

        label { display:block; margin-bottom:6px; font-weight:600; }

        input, textarea {
            width:100%;
            padding:10px;
            border:1px solid #ccc;
            border-radius:4px;
        }

        textarea { min-height:120px; }

        .btn {
            padding:10px 18px;
            border:none;
            border-radius:4px;
            cursor:pointer;
            color:#fff;
            font-size:14px;
            text-decoration:none;
            display:inline-block;
            text-align:center;
        }

        .primary { background:#0d6efd; }
        .warning { background:#f4b400; }
        .danger { background:#dc3545; }

        table { width:100%; border-collapse:collapse; }
        thead { background:#1e272e; color:#fff; }
        th, td { padding:12px; vertical-align:middle; }
        tbody tr { border-bottom:1px solid #ddd; }

        img {
            width:70px;
            height:70px;
            object-fit:cover;
            border-radius:4px;
        }

       
        .action-buttons {
            display:flex;
            gap:8px;
        }

        @media(max-width:768px){
            .row { flex-direction:column; }
            .action-buttons { flex-direction:column; }
            .action-buttons .btn { width:100%; }
        }
    </style>

Main Content
<div class="main-content">
   
    <div class="row g-4">

   
<body>

<div class="container">
    <h1>Pets</h1>

    <!-- ADD PET -->
    <div class="card">
        <div class="card-title">Add New Pet</div>

        <form method="post" action="/admin/save_pets">
            <div class="row">
                <div class="col">
                    <label>Pet Name</label>
                    <input type="text" name="dog_name" required>
                </div>
                <div class="col">
                    <label>Pet Food</label>
                    <input type="text" name="dog_food">
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <label>Image URL</label>
                    <input type="text" name="dog_image" placeholder="/uploads/dog.jpg">
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <label>Care Description</label>
                    <textarea name="dog_care_description"></textarea>
                </div>
            </div>

            <button class="btn primary">Save Pet</button>
        </form>
    </div>

    
    <div class="card">
        <div class="card-title">Pets List</div>

        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Food</th>
                    <th>Image</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% pets.forEach(function(pet, index){ %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= pet.dog_name %></td>
                    <td><%= pet.dog_food %></td>
                    <td>
                        <% if(pet.dog_image){ %>
                            <img src="<%= pet.dog_image %>">
                        <% } %>
                    </td>
                    <td>
                        
                        <div class="action-buttons">
                            <a href="/admin/edit_pets/<%= pet.id %>" class="btn warning">Edit</a>
                            <a href="/admin/delete_pets/<%= pet.id %>"
                               class="btn danger"
                               onclick="return confirm('Are you sure?')">
                               Delete
                            </a>
                        </div>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

</body>
</html>

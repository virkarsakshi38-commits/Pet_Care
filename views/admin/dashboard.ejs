<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Pet Care Admin Dashboard</title>


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">

<style>
body {
    font-family: 'Segoe UI', sans-serif;
    background-color: #f8f9fa;
}

.sidebar {
    height: 100vh;
    background-color: #1f2d5a;
    color: white;
    padding-top: 20px;
    position: fixed;
    width: 220px;
}

.sidebar a {
    color: white;
    text-decoration: none;
    display: block;
    padding: 12px 20px;
    margin-bottom: 5px;
    border-radius: 5px;
}

.sidebar a:hover {
    background-color: #f4a300;
    color: white;
}

.main-content {
    margin-left: 240px;
    padding: 20px;
}



</style>
</head>
<body>


<div class="sidebar">

    <h3 class="text-center mb-4">
        <i class="fa-solid fa-paw"></i> ROGER
    </h3>

    <a href="/admin/dashboard">
        <i class="fa-solid fa-chart-line me-2"></i> Dashboard
    </a>

    <a href="/admin/services">
        <i class="fa-solid fa-screwdriver-wrench me-2"></i> Services
    </a>

    <a href="/admin/team">
        <i class="fa-solid fa-user-doctor me-2"></i> Professional Doctors
    </a>

    <a href="/admin/pets">
        <i class="fa-solid fa-dog me-2"></i> Pets
    </a>

    <a href="/admin/booking">
        <i class="fa-solid fa-calendar-check me-2"></i> Bookings
    </a>

    <a href="/admin/enquiry">
        <i class="fa-solid fa-envelope-open-text me-2"></i> Enquiry
    </a>

    <a href="/admin/blogs">
        <i class="fa-solid fa-blog me-2"></i> Blogs
    </a>

    <a href="/admin/dog_info">
        <i class="fa-solid fa-circle-info me-2"></i> Dog Info
    </a>

</div>
<style>
body{
    font-family:'Segoe UI',sans-serif;
    background:#f4f6fb;
}

/* main content only */
.main-content{
    margin-left:240px; /* sidebar already included elsewhere */
    padding:30px;
}

/* stat cards */
.stat-card{
    background:#fff;
    border:none;
    border-radius:16px;
    padding:22px;
    box-shadow:0 10px 25px rgba(0,0,0,.08);
    transition:.3s;
}

.stat-card:hover{
    transform:translateY(-5px);
}

.stat{
    display:flex;
    justify-content:space-between;
    align-items:center;
}

.stat h2{
    margin:0;
    font-weight:700;
}

.stat p{
    margin:0;
    color:#6c757d;
}

.stat i{
    font-size:36px;
    color:#1f2d5a;
    background:#eef2ff;
    padding:15px;
    border-radius:50%;
}

/* table */
.table img{
    border-radius:8px;
}
</style>
</head>

<body>

<div class="main-content">

<h3 class="mb-4">ðŸ“Š Admin Dashboard</h3>

<div class="row g-4">

<div class="col-md-4">
<div class="stat-card">
<div class="stat">
<div>
<h2><%= pets %></h2>
<p>Total Pets</p>
</div>
<i class="fa-solid fa-dog"></i>
</div>
</div>
</div>

<div class="col-md-4">
<div class="stat-card">
<div class="stat">
<div>
<h2><%= services %></h2>
<p>Total Services</p>
</div>
<i class="fa-solid fa-screwdriver-wrench"></i>
</div>
</div>
</div>

<div class="col-md-4">
<div class="stat-card">
<div class="stat">
<div>
<h2><%= doctors %></h2>
<p>Total Doctors</p>
</div>
<i class="fa-solid fa-user-doctor"></i>
</div>
</div>
</div>

<div class="col-md-4">
<div class="stat-card">
<div class="stat">
<div>
<h2><%= blogs %></h2>
<p>Total Blogs</p>
</div>
<i class="fa-solid fa-blog"></i>
</div>
</div>
</div>

<div class="col-md-4">
<div class="stat-card">
<div class="stat">
<div>
<h2><%= booking %></h2>
<p>Total Bookings</p>
</div>
<i class="fa-solid fa-calendar-check"></i>
</div>
</div>
</div>

<div class="col-md-4">
<div class="stat-card">
<div class="stat">
<div>
<h2><%= enquiry %></h2>
<p>Total Enquiries</p>
</div>
<i class="fa-solid fa-envelope"></i>
</div>
</div>
</div>

</div>

<hr class="my-5">

<h5 class="mb-3">ðŸ•’ Latest Bookings</h5>

<div class="card border-0 shadow-sm p-3">
<table class="table table-hover align-middle">
<thead class="table-dark">
<tr>
<th>#</th>
<th>Pet</th>
<th>User</th>
<th>Mobile</th>
<th>Date</th>
</tr>
</thead>

<tbody>
<% latestBookings.forEach((b,i)=>{ %>
<tr>
<td><%= i+1 %></td>
<td>
<% if(b.dog_image){ %>
<img src="<%= b.dog_image %>" width="50">
<% } %>
</td>
<td><%= b.user_name %></td>
<td><%= b.user_mobile %></td>
<td><%= b.created_at.toString().slice(0,10) %></td>
</tr>
<% }) %>
</tbody>
</table>
</div>
</div>

</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dog Service Requests</title>

    <style>
        * { font-family: Arial, sans-serif; box-sizing: border-box; }
        body { background:#f5f6fa; margin:0; padding:20px; }
        .container { max-width:1300px; margin:auto; }
        h1 { margin-bottom:20px; }

        .card {
            background:#fff;
            border-radius:6px;
            padding:20px;
            margin-bottom:25px;
            box-shadow:0 2px 8px rgba(0,0,0,0.08);
        }

        .card-title {
            font-size:18px;
            font-weight:600;
            margin-bottom:15px;
        }

        table { width:100%; border-collapse:collapse; }
        thead { background:#1e272e; color:#fff; }
        th, td { padding:12px; vertical-align:middle; text-align:left; }
        tbody tr { border-bottom:1px solid #ddd; }

        .badge {
            padding:5px 10px;
            border-radius:12px;
            font-size:12px;
            color:#fff;
        }

        .pending { background:#f4b400; }
        .confirmed { background:#0d6efd; }
        .completed { background:#198754; }
        .cancelled { background:#dc3545; }

        .btn {
            padding:8px 14px;
            border:none;
            border-radius:4px;
            cursor:pointer;
            color:#fff;
            font-size:13px;
            text-decoration:none;
            display:inline-block;
        }

        .primary { background:#0d6efd; }
        .warning { background:#f4b400; }
        .danger { background:#dc3545; }

        .action-buttons {
            display:flex;
            gap:8px;
        }

        @media(max-width:900px){
            table { font-size:13px; }
            .action-buttons { flex-direction:column; }
            .action-buttons .btn { width:100%; }
        }
    </style>
</head>
<body>

<div class="container">
    <h1>Dog Service Requests</h1>

    <div class="card">
        <div class="card-title">Requests List</div>

        <table>
            <thead>
                <tr>
                    <th>#</th>
                    <th>Owner</th>
                    <th>Mobile</th>
                    <th>Dog</th>
                    <th>Breed</th>
                    <th>Service</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>

           <tbody>
<% if(dogs && dogs.length > 0){ %>
    <% dogs.forEach(function(dog, index){ %>
    <tr>
        <td><%= index + 1 %></td>
        <td><%= dog.owner_name %></td>
        <td><%= dog.mobile %></td>
        <td><%= dog.dog_name %></td>
        <td><%= dog.breed %></td>
        <td><%= dog.service_type %></td>
        <td><%= dog.preferred_date || '-' %></td>
        <td>
            <span class="badge 
            <%= dog.status === 'Pending' ? 'pending' :
                dog.status === 'Confirmed' ? 'confirmed' :
                dog.status === 'Completed' ? 'completed' :
                'cancelled' %>">
                <%= dog.status %>
            </span>
        </td>
        <td>
            <div class="action-buttons">
                <a href="/admin/edit-dog/<%= dog.id %>" class="btn warning">Edit</a>
                <a href="/admin/delete-dog/<%= dog.id %>"
                   class="btn danger"
                   onclick="return confirm('Are you sure?')">
                   Delete
                </a>
            </div>
        </td>
    </tr>
    <% }) %>
<% } else { %>
    <tr>
        <td colspan="9" style="text-align:center;">
            No dog service requests found
        </td>
    </tr>
<% } %>
</tbody>

        </table>
    </div>
</div>

</body>
</html>
